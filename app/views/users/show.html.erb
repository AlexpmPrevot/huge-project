<div class="container">
  <h1 class="text-center">Profile</h1>
  <div class="border border-dark rounded p-3">
    <h2 class="text-center"><%= @user.nickname %></h2>
    <div class="progress">
      <div class="progress-bar bg-warning" role="progressbar" style="width: 7%" aria-valuenow="7" aria-valuemin="0" aria-valuemax="500"></div>
    </div>
    <div><%= image_tag("https://img2.freepng.fr/20200902/rtc/transparent-draw-so-cute-5f504e2fb3b298.868674291599098415736.jpg", size: "200x200", class: "rounded mx-auto d-block mt-3")%></div>
    <p class="text-center"><%= @user.avatar_color %></p>
    <div class="text-center"><%= @user.bio %></div>
  </div>
  <div class="text-center">
    <%= link_to "Send a hug request", new_hug_path, class: "btn btn-secondary mt-3" %>
    <%= link_to "Edit my profile", edit_user_registration_path, class: "btn btn-secondary mt-3" %>
  </div>

  <h1 class="text-center">Reviews</h1>
  <% if @reviews.empty? %>
    <p class="text-center">No reviews yet.</p>
  <% else %>
    <% @reviews.each do |review| %>
      <%= render partial: "reviews/review", locals: { review: review } %>
    <% end %>
</div>

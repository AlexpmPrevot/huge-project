<h2 class="text-center"><strong>Log in</strong></h2>
<div class="border-custom-orange shadow-lg rounded mt-3 p-3">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "Email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "Mot de passe" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions btn btn-custom-green">
    <strong><%= f.button :submit, "Se connecter", class: "text-white" %></strong>
  </div>
</div>

<% end %>

<%= render "devise/shared/links" %>

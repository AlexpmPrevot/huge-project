<div class="container col-12 col-6">
  <h1 class="text-center mb-3">Profile</h1>
  <div class="border border-dark shadow lg p-3 mb-5 rounded-3 bg-custom-green">
    <h2 class="text-center fs-1 text mt-3"><%= @user.nickname %></h2>
    <div class="justify-content-center p-3 w100">
      <div class="d-flex justify-content-center">
        <div class="progress blue">
          <span class="progress-left">
            <span class="progress-bar"></span>
          </span>
          <span class="progress-right">
            <span class="progress-bar"></span>
          </span>
          <div class="progress-value">
            <div>
              <%= image_tag("https://img2.freepng.fr/20200902/rtc/transparent-draw-so-cute-5f504e2fb3b298.868674291599098415736.jpg", size: "150x120", class: "rounded-circle mx-auto d-block")%>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="text-center fs-5 text mt-3"><%= @user.bio %></div>
    <div class="text-center fs-1 text mt-3"><%= @user.score %></div>

  </div>
  <div class="d-flex justify-content-between text-center mt-3 mb-5">
    <div data-controller="confirmed-popup" >
      <%= link_to 'Hug request', hugs_path(user_id: @user), method: :post, class: 'btn btn-custom-green text-white mb-2', id: 'request'%>
    </div>
    <%= link_to "Edit my profile", edit_user_registration_path, class: "btn btn-custom-gray text-white mb-2" %>
  </div>
</div>

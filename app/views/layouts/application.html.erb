<!DOCTYPE html>
<html>
  <head>
    <title>HugeProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/2c3cafcce6.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <% if current_user %>
      <style>
        :root {
     --avatar-color: <%= current_user.avatar_color.nil? ? '#3D3D3D' : current_user.avatar_color %>;
 }
      </style>
    <% end %>
  </head>

  <body>
  <% if current_user %>
    <div data-controller="geoloc" data-geoloc-userid-value=""<% current_user.id %>">
      <div class="d-none">
        <%= render 'layouts/hidden_form', current_user: current_user %>
      </div>
    </div>
  <% end %>
    <%= render 'shared/flashes' %>

    <% if current_user %>
      <div data-controller="hug-subscription" data-hug-subscription-user-id-value="<%= current_user.id %>">
        <div data-hug-subscription-target="popup">
        </div>
      </div>
    <% end %>
    <%= yield %>

    <%= render 'shared/navbar' %>
  </body>
</html>

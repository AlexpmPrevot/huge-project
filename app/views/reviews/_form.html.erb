<div class="bg-custom-gray shadow-lg rounded m-3 p-3">
  <h1 class="text-white" >Leave a review</h1>
  <%= simple_form_for([hug, review ],
                        data: { insert_in_list_target: "form",
                                action: "submit->insert-in-list#send" }, html: { class: "review_form" }) do |f| %>
      <%= f.input :rating, collection: (1..5).to_a, lable:"Rate your experience" %>
    <% end %>
</div>

  <%#= render 'reviews/form', hug: @hug, review: @review %>

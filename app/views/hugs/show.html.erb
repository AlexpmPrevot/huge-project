
  <% if @hug.sender == current_user %>
    <% user_2 = "#{@hug.receiver.longitude},#{@hug.receiver.latitude}" %>
  <% else %>
    <% user_2 = "#{@hug.sender.longitude},#{@hug.sender.latitude}" %>
  <% end %>


  <div class="card p-3 m-3" id="map">
    <div style="width: 100%; height: 600px;"
      data-controller="itinerary"
      data-itinerary-markers-value="<%= @markers.to_json %>"
      data-itinerary-hug-id-value="<%= @hug.id %>"
      data-itinerary-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
      data-itinerary-start-point-value="<%=current_user.longitude%>,<%=current_user.latitude%>"
      data-itinerary-end-point-value="<%= user_2 %>"
      >
    </div>
    <div id="instructions"></div>
  </div>
  <% if current_user.reviews.find_by(hug:@hug) %>
    <div class="bg-custom-gray shadow-lg rounded m-3 p-3">
      <div class="stars d-flex">
        <% 5.times do |i| %>
          <% if current_user.reviews.find_by(hug:@hug).rating > i %>
            <i class="fa-solid fa-star active"></i>
          <% else %>
            <i class="fa-solid fa-star"></i>
          <% end %>
        <% end %>
      </div>
    </div>

  <% else %>
    <%= render 'reviews/form', hug: @hug, review: @review %>
  <% end %>
